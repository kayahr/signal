{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/signal",
    "version": "3.0.1",
    "type": "module",
    "description": "Standalone signal implementation",
    "keywords": [
        "observable",
        "signal"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": "github:kayahr/signal",
    "homepage": "https://github.com/kayahr/signal",
    "bugs": "https://github.com/kayahr/signal/issues",
    "funding": "https://github.com/kayahr/signal?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": "./lib/main/index.js",
    "scripts": {
        "clean": "rimraf lib",
        "build": "run-s build:*",
        "build:compile": "tsc",
        "test": "run-s test:*",
        "test:unit": "vitest run",
        "test:lint": "eslint --max-warnings 0",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "install:browser": "playwright install chromium",
        "prepare": "run-s install:browser clean build"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "3.4.0",
        "@kayahr/vitest-matchers": "1.1.0",
        "@types/node": "22.14.0",
        "@vitest/browser": "3.1.1",
        "@vitest/coverage-v8": "3.1.1",
        "cspell": "8.19.3",
        "npm-run-all": "4.1.5",
        "playwright": "1.51.1",
        "rimraf": "6.0.1",
        "rxjs": "7.8.2",
        "source-map-support": "0.5.21",
        "typedoc": "0.28.2",
        "typedoc-github-theme": "0.3.0",
        "typescript": "5.8.3",
        "vitest": "3.1.1"
    },
    "dependencies": {
        "@kayahr/observable": "^1.1.4",
        "@types/benchmark": "^2.1.5",
        "benchmark": "^2.1.4",
        "symbol-observable": "^4.0.0"
    }
}
